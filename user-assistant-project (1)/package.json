{
  "name": "pomoshchnik-frontend",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "build": "webpack --mode production --config webpack.config.js",
    "build:host": "webpack --mode production --config webpack.host.config.js",
    "dev": "webpack serve --mode development --config webpack.config.js",
    "dev:host": "webpack serve --mode development --config webpack.host.config.js",
    "server": "cd server && npm run dev",
    "server:prod": "cd server && npm start",
    "start:all": "concurrently \"npm run server\" \"npm run dev\"",
    "start:all-with-host": "concurrently \"npm run server\" \"npm run dev\" \"npm run dev:host\""
  },
  "dependencies": {
    "@rspack/core": "latest",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cors": "2.8.5",
    "express": "5.2.1",
    "lucide-react": "^0.454.0",
    "multer": "2.0.2",
    "next": "16.1.1",
    "pomoshchnik": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.4",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}